  <ion-list>
    <form (submit)="doLogin()">
      <ion-item>
        <ion-label fixed>ID</ion-label>
        <ion-input type="text" [(ngModel)]="userInfo.userId" id="userId" name="userId" #userId></ion-input> 
      </ion-item>

      <ion-item>
        <ion-label fixed>Password</ion-label>
        <ion-input type="password" [(ngModel)]="userInfo.userPw" id="userPw" name="userPw" #userPw></ion-input>
      </ion-item>

      <div margin>
        <button ion-button color="primary" block>로그인</button>
      </div>
    </form>
    <div margin>
      <button ion-button color="primary" (click)="btnJoin();" block>회원가입</button>
    </div>
  </ion-list>

