    <ion-grid>
        <ion-row>
            <ion-col col-2><ion-label color="primary">제목</ion-label></ion-col>
            <ion-col col-10><ion-input type="text" [(ngModel)]="notice.title" id="noticeTitle" name="noticeTitle" #userId></ion-input></ion-col>
        </ion-row>
        <ion-row>
            <ion-col col-2><ion-label color="primary">내용</ion-label></ion-col>
            <ion-col col-10><ion-textarea [(ngModel)]="notice.body" id="noticeBody" name="noticeBody" #userId></ion-textarea></ion-col>
        </ion-row>
    </ion-grid>
    <div padding>
        <button ion-button color="primary" (click)="btnNoticeWrt();" block>작성</button>
        <button ion-button color="primary" (click)="btnCancel();" block>취소</button>
