<ion-header>

  <ion-navbar>
    <ion-title>일정 상세</ion-title>
  </ion-navbar>

</ion-header>

<ion-content padding>
  <!-- <ion-refresher (ionRefresh)="doRefresh($event)">
    <ion-refresher-content
        pullingIcon="arrow-dropdown"
        pullingText="Pull to refresh"
        refreshingSpinner="circles"
        refreshingText="Refreshing...">
    </ion-refresher-content>
</ion-refresher> -->
  <ion-card>
    <ion-card-header>
      {{event.title}}
    </ion-card-header>
    <ion-card-content>
      <table class="table">
        <tr>
          <td width="40%">시작</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.startTime"></ion-input>
          </td>
        </tr>
        <tr>
          <td>마감</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.endTime"></ion-input>
          </td>
        </tr>
        <tr>
          <td>카테고리</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.cate1"></ion-input>
          </td>
        </tr>
        <tr>
          <td>세부카테고리</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.cate2"></ion-input>
          </td>
        </tr>
        <tr>
          <td>내용</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.content"></ion-input>
          </td>
        </tr>
        <tr>
          <td>메모</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.memo"></ion-input>
          </td>
        </tr>
        <tr>
          <td>진행률(%)</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.completion"></ion-input>
          </td>
        </tr>
        <tr>
          <td>작성자</td>
          <td>
            <ion-input type="text" readonly [(ngModel)]="event.userNm"></ion-input>
          </td>
        </tr>
        <tr>
          <td>하루종일</td>
          <td>
            <ion-item>
              <ion-checkbox [(ngModel)]="event.allDay" ng-checked="event.allDay" disabled></ion-checkbox>
            </ion-item>
          </td>
        </tr>
      </table>
    </ion-card-content>
  </ion-card>
  <div align="center">
    <button ion-button outline (click)="modify(event)">
        <ion-icon name="color-wand"></ion-icon>&nbsp;&nbsp;수정
    </button>
    <button ion-button outline (click)="delete()">
        <ion-icon name="trash"></ion-icon>&nbsp;&nbsp;삭제
    </button>
    <button ion-button outline (click)="cancel()">
          <ion-icon name="checkmark"></ion-icon>&nbsp;&nbsp;확인
      </button>
  </div>
</ion-content>